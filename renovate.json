{
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticCommitType(chore)"
  ],
  "ignoreTests": true,
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "semanticCommits": "disabled",
  "commitBody": "[skip ci]",
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "pin": {
    "automerge": true
  },
  "lockFileMaintenance": {
    "automerge": true
  },
  "schedule": [
    "before 3am on the first day of the month"
  ]
}
